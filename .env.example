# Nirmaha - Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# FRAPPE CONFIGURATION
# =============================================================================
SITE_NAME=nirmaha.localhost
ADMIN_PASSWORD=admin
DB_PASSWORD=

# =============================================================================
# PAYMENT INTEGRATION (Razorpay)
# =============================================================================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# =============================================================================
# SMS PROVIDER (MSG91)
# =============================================================================
# Get from: https://msg91.com/
SMS_PROVIDER=msg91
SMS_API_KEY=
SMS_SENDER_ID=NIRMHA

# Alternative: Twilio
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Uses Frappe's email settings by default
# Configure in Setup > Email > Email Account

# =============================================================================
# STORAGE (for large files/images)
# =============================================================================
# Optional: S3-compatible storage for equipment photos
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=nirmaha-assets
# S3_ENDPOINT=

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable for local development
FRAPPE_DEBUG=1
DEVELOPER_MODE=1

# =============================================================================
# STAGING SITE
# =============================================================================
STAGING_SITE=nirmaha.press.appz.studio
STAGING_ADMIN_PASSWORD=
