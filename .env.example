# Nirmaha - Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# FRAPPE CONFIGURATION
# =============================================================================
SITE_NAME=nirmaha.localhost
ADMIN_PASSWORD=admin
DB_PASSWORD=

# =============================================================================
# PAYMENT INTEGRATION (Stripe)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Connect (for multi-vendor payouts)
# Enable Connect in Stripe Dashboard first
STRIPE_CONNECT_CLIENT_ID=ca_...

# =============================================================================
# SMS PROVIDER (Twilio - US market)
# =============================================================================
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1...

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Uses Frappe's email settings by default
# Configure in Setup > Email > Email Account

# =============================================================================
# STORAGE (for large files/images)
# =============================================================================
# Optional: S3-compatible storage for equipment photos
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=nirmaha-assets
# S3_ENDPOINT=

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable for local development
FRAPPE_DEBUG=1
DEVELOPER_MODE=1

# =============================================================================
# STAGING SITE
# =============================================================================
STAGING_SITE=nirmaha.press.appz.studio
STAGING_ADMIN_PASSWORD=
